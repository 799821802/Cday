<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="150dp">

    
    <ImageView
        android:id="@+id/item_recycler_img"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="150dp" />


    <LinearLayout
        android:layout_toRightOf="@id/item_recycler_img"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_recycler_title"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:text="新木乃伊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_recycler_commonSpecial"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="木乃伊"
            android:textColor="@color/Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_recycler_time"
            android:text="6.9上映"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_recycler_info"
            android:text="今日158家影院上映"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <Button

            android:textColor="@color/Pink"
            android:text="@string/Ticket"
            android:background="#fff"
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:id="@+id/item_recycler_buy_ticket" />
        <Button

            android:textColor="@color/Pink"
            android:text="详情"
            android:background="#fff"
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:id="@+id/item_recycler_bt_moviesinfo" />
    </LinearLayout>

</RelativeLayout>